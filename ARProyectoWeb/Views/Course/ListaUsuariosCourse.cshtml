@model List<ARProyectoWeb.Data.Models.Usuario>

@{
    ViewData["Title"] = "Lista de usuario en curso";
}

@if (ViewBag.Error != null)
{
    <div class="container">
        <div class="alert alert-primary">
            @ViewBag.Error
        </div>
    </div>
}
<br />
<br />

@using (Html.BeginForm())
{
    <p>Seleccioné un curso</p>
    <div class="d-flex">
        @Html.DropDownList("CourseId", null, htmlAttributes: new { @class = "flex-fill p-2" })
        <input value="Buscar" type="submit" />
    </div>
    
}

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Rol</th>
                    <th>Correo</th>
                    <th>Fecha de nacimiento</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle">
                        <td>
                            @item.Nombres @item.Apellidos
                        </td>
                        <td>
                            @item.Rol
                        </td>
                        <td>
                            @item.Correo
                        </td>
                        <td>
                            @item.FechaNacimiento.ToShortDateString()
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div>
        <h2>No existen registros</h2>
    </div>
}
